//h2(style="text-align: center") Процессинг карт
#table-wrapper(style="height: 290px; overflow-y: auto;")
  table.table.table-bordered.table-hover.table-condensed(style="background: white; margin-bottom: 0px")
    tbody(ng-repeat='card in cards')
      tr.no-border
       th.w25.no-border(style="color: blue; font-size: 110%") Карта {{ card.id }}
       th.w25.no-border
        small RFID {{ card.RFID }}
       th.w25.no-border.text-right(colspan="2")
        small активирована {{ card.activatedAt.toDate() | date:'yyyy-MM-dd HH:mm:ss' }}
      tr
        th.w25(style="padding-left: 30px;") Кошелек
        th.w25.text-right Баланс
        th.w25.text-right Начало действия
        th.w25.text-right Конец действия
      tr(ng-repeat='bag in card.bags')
        td.w25(style="padding-left: 30px;") {{ bag.currency.name }}
        td.w25.text-right(ng-class="{ animated: bag.wasUpdated, infinite: bag.wasUpdated, flash: bag.wasUpdated, 'table-cell-changed': bag.wasUpdated, 'bg-success': bag.wasUpdated }") {{ bag.balance }}
        td.w25.text-right {{ bag.activePeriodStart.toDate() | date:'yyyy-MM-dd HH:mm:ss' }}
        td.w25.text-right {{ bag.activePeriodFinish.toDate() | date:'yyyy-MM-dd HH:mm:ss' }}
